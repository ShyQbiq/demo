FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

FROM node:20-alpine
WORKDIR /app

# Install specific version
RUN npm install -g serve@14

COPY --from=build /app/dist ./dist

EXPOSE 8080

ENV PORT=8080
ENV HOST=0.0.0.0

CMD ["sh", "-c", "serve -s dist -l tcp://0.0.0.0:${PORT}"]